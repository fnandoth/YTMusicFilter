{
  "manifest_version": 3,
  "name": "YouTube Music Filter",
  "version": "1.1",
  "description": "Automatically hides and skips unwanted songs on YouTube Music",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
